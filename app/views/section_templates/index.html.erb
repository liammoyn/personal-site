<h1>
  List of all sections
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new section
    </h2>
  </header>

  <form action="/insert_section" method="post">
    <div>
      <label for="name_box">
        Name
      </label>

      <input type="text" id="name_box" name="query_name">
    </div>

    <div>
      <label for="article_id_box">
        Article
      </label>

      <input type="text" id="article_id_box" name="query_article_id">
    </div>

    <div>
      <label for="placement_box">
        Placement
      </label>

      <input type="text" id="placement_box" name="query_placement">
    </div>

    <div>
      <label for="text_content_box">
        Text content
      </label>

      <input type="text" id="text_content_box" name="query_text_content">
    </div>

    <button type="submit">
      Create section
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_sections.each do |a_section| %>
      <li>
        <a href="/sections/<%= a_section.id %>">
          Section #<%= a_section.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>

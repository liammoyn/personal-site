<h1>
  List of all notes
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new note
    </h2>
  </header>

  <form action="/insert_note" method="post">
    <div>
      <label for="content_box">
        Content
      </label>

      <input type="text" id="content_box" name="query_content">
    </div>

    <div>
      <label for="topic_id_box">
        Topic
      </label>

      <input type="text" id="topic_id_box" name="query_topic_id">
    </div>

    <button type="submit">
      Create note
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_notes.each do |a_note| %>
      <li>
        <a href="/notes/<%= a_note.id %>">
          Note #<%= a_note.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
